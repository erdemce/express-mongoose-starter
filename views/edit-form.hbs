<form method="POST" action="/todos/{{todo._id}}/edit">
  <div class="mb-3">
    <label for="exampleInputEmail1" class="form-label">Name</label>
    <input name="myTodo" type="text" 
    class="form-control" id="exampleInputEmail1"
    value="{{todo.name}}">
  </div>
  <div class="mb-3">
    <label for="exampleInputDescription1" class="form-label">Description</label>
    <input name="myDescription" type="text"
    value="{{todo.description}}"
    class="form-control" id="exampleInputDescription1">
  </div>
  <button type="Submit" class="btn btn-primary">Submit the changes</button>
</form>
